<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<!-- TemplateBeginEditable name="doctitle" -->
<title>{$page_title}</title>
<!-- TemplateEndEditable --><!-- TemplateBeginEditable name="head" --><!-- TemplateEndEditable -->
<link rel="shortcut icon" href="favicon.ico" />
<link rel="icon" href="animated_favicon.gif" type="image/gif" />
<link href="{$ecs_css_path}" rel="stylesheet" type="text/css" />
<style>
th, td{padding:3px;}
</style>
{* 包含脚本文件 *}
{insert_scripts files='common.js,global.js,compare.js'}
</head>
<body>
  <div id="wrap">
    <!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->
    <div class="container">
      <div class="global_l">
      <!-- TemplateBeginEditable name="左边区域" -->
			<!-- #BeginLibraryItem "/library/search_form.lbi" --><!-- #EndLibraryItem -->
			<!-- #BeginLibraryItem "/library/category_tree.lbi" --><!-- #EndLibraryItem -->
			<!-- #BeginLibraryItem "/library/top10.lbi" --><!-- #EndLibraryItem -->
			<!-- #BeginLibraryItem "/library/recommend_promotion.lbi" --><!-- #EndLibraryItem -->
			<!-- #BeginLibraryItem "/library/promotion_info.lbi" --><!-- #EndLibraryItem -->
			<!-- #BeginLibraryItem "/library/vote.lbi" --><!-- #EndLibraryItem -->
			<!-- TemplateEndEditable -->
      </div>
      <div class="global_r">
        <!-- #BeginLibraryItem "/library/ur_here.lbi" --><!-- #EndLibraryItem -->
        <div class="module goods_list">
          <div class="caption">
            <span>{$brand.brand_name}</span>
          </div>
          <p class="top"><span></span></p>
          <div class="content">
            <table width="98%" style="margin:0 auto 5px auto;" border="0" cellpadding="5" cellspacing="1" bgcolor="#dddddd">
              <tr>
                <td bgcolor="#ffffff" width="200" align="center" valign="middle">
                <div style="width:200px; overflow:hidden;">
                    <!-- {if $brand.brand_logo} -->
                    <img src="data/brandlogo/{$brand.brand_logo}" />
                    <!-- {/if} -->
                </div>
                </td>
                <td bgcolor="#ffffff"> {$brand.brand_desc|nl2br}<br />
                  <!-- {if $brand.site_url} -->
                  {$lang.official_site} <a href="{$brand.site_url}" target="_blank" class="f6">{$brand.site_url}</a><br />
                  <!-- {/if} -->
                  {$lang.brand_category}<br />
                  <div class="brandCategoryA" style="text-indent:37px;">
                    <!-- {foreach from=$brand_cat_list item=cat} -->
                    <a href="{$cat.url}" style="margin-right:7px;">{$cat.cat_name|escape:html} {if $cat.goods_count}({$cat.goods_count}){/if}</a>
                    <!-- {/foreach} -->
                </div></td>
              </tr>
            </table>
          </div>
          <p class="bottom"><span></span></p>
        </div>
        <!-- TemplateBeginEditable name="右边区域" -->
				<!-- #BeginLibraryItem "/library/recommend_best.lbi" --><!-- #EndLibraryItem -->
				<!-- #BeginLibraryItem "/library/goods_list.lbi" --><!-- #EndLibraryItem -->
				<!-- #BeginLibraryItem "/library/history.lbi" --><!-- #EndLibraryItem -->
				<!-- TemplateEndEditable -->
      </div>
    </div>
  </div>
</body>
</html>