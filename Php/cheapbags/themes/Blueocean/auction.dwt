<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<!-- TemplateBeginEditable name="doctitle" -->
<title>{$page_title}</title>
<!-- TemplateEndEditable --><!-- TemplateBeginEditable name="head" --><!-- TemplateEndEditable -->
<link rel="shortcut icon" href="favicon.ico" />
<link rel="icon" href="animated_favicon.gif" type="image/gif" />
<link href="{$ecs_css_path}" rel="stylesheet" type="text/css" />
{* 包含脚本文件 *}
{insert_scripts files='common.js,lefttime.js'}
<script type="text/javascript">
  {foreach from=$lang.js_languages item=item key=key}
    var {$key} = "{$item}";
  {/foreach}
</script>
</head>
<body>
  <div id="wrap">
    <!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->
    <div class="container">
      <div class="global_l">
        <!-- TemplateBeginEditable name="左边区域" -->
        <!-- #BeginLibraryItem "/library/category_tree.lbi" --><!-- #EndLibraryItem -->
        <!-- #BeginLibraryItem "/library/top10.lbi" --><!-- #EndLibraryItem -->
        <!-- #BeginLibraryItem "/library/history.lbi" --><!-- #EndLibraryItem -->
        <!-- TemplateEndEditable -->
      </div>
      <div class="global_r">
      <!-- TemplateBeginEditable name="通栏广告区域（宽752px）" -->
      <!-- TemplateEndEditable -->
        <div class="module">
          <p class="top"><span></span></p>
          <div class="content" id="group_auction">
            <h1>{$lang.auction_goods_info}</h1>
            <div class="cont">
              <div class="img_info">
                <form name="theForm" style="padding:3px 0 10px 0px;" action="auction.php" method="post">
                  <h2><strong>{$lang.goods_name}：{$auction.goods_name|escape:html}</strong></h2>
                  {$lang.au_current_price}：{$auction.formated_current_price}<br>
                  起止时间：{$auction.start_time} -- {$auction.end_time}<br>
                  {$lang.au_start_price}：{$auction.formated_start_price}<br>
                  {$lang.au_amplitude}：{$auction.formated_amplitude}<br>
                  <!-- {if $auction.end_price gt 0} -->
                  {$lang.au_end_price}：{$auction.formated_end_price}<br>
                  <!-- {/if} -->
                  <!-- {if $auction.deposit gt 0} -->
                  {$lang.au_deposit}：{$auction.formated_deposit}<br>
                  <!-- {/if} -->
                  <!-- {if $auction.status_no eq 0} 未开始 -->
                  {$lang.au_pre_start}
                  <!-- {elseif $auction.status_no eq 1} 进行中 -->
                  <font class="f5">{$lang.au_under_way}<span id="leftTime">{$lang.please_waiting}</span></font><br /><br />
                  <div class="offer">
                    {$lang.au_i_want_bid}：
                    <input name="price" type="text" id="price" size="8" />
                    <input name="bid" type="submit" class="button_2" id="bid" value="{$lang.button_bid}" />
                    <input name="act" type="hidden" value="bid" />
                    <input name="id" type="hidden" value="{$auction.act_id}" />
                  </div>
                  <!-- {else} 已结束 -->
                   <!-- {if $auction.is_winner} -->
                  <span class="f_red">{$lang.au_is_winner}</span><br />
                  <input name="buy" type="submit" class="bnt_blue_1" value="{$lang.button_buy}" />
                  <input name="act" type="hidden" value="buy" />
                  <input name="id" type="hidden" value="{$auction.act_id}" />
                  <!-- {else} -->
                  {$lang.au_finished}
                  <!-- {/if} -->
                  <!-- {/if} -->
                </form>
              </div>
              <div class="img">
								<a href="{$auction_goods.url}"><img src="{$auction_goods.goods_thumb}" alt="{$auction_goods.goods_name|escape:html}" /></a> 
              </div>
            </div>
          </div>
          <p class="bottom"><span></span></p>
        </div>
        <!-- Activity_Intro -->
        <div class="module goods_list">
          <div class="caption"><span>{$lang.activity_intro}</span></div>
          <p class="top"><span></span></p>
          <div class="content" style="padding:5px 10px;">{$auction.act_desc|escape:html|nl2br}</div>
          <p class="bottom"><span></span></p>
        </div>
        <!-- end-Activity_Intro -->
        <!-- Record_Bid -->
        <div class="module goods_list">
          <div class="caption"><span>{$lang.bid_record}</span></div>
          <p class="top"><span></span></p>
          <div class="content">
            <table width="98%" style="margin:0 auto; margin-bottom:6px;" border="0" cellpadding="5" cellspacing="1" bgcolor="#dddddd">
              <tr>
                <th align="center" bgcolor="#ffffff">{$lang.au_bid_price}</th>
                <th align="center" bgcolor="#ffffff">{$lang.au_bid_time}</th>
                <th align="center" bgcolor="#ffffff">{$lang.au_bid_status}</th>
              </tr>
              <!-- {foreach from=$auction_log item=log name=fe_bid_log} -->
              <tr>
                <td align="center" bgcolor="#ffffff">{$log.user_name}</td>
                <td align="center" bgcolor="#ffffff">{$log.formated_bid_price}</td>
                <td align="center" bgcolor="#ffffff">{$log.bid_time}</td>
                <td align="center" bgcolor="#ffffff">{if $smarty.foreach.fe_bid_log.first} {$lang.au_bid_ok}{else}&nbsp;{/if}</td>
              </tr>
              <!-- {foreachelse} -->
              <tr>
                <td colspan="4" align="center" bgcolor="#ffffff">{$lang.no_bid_log}</td>
              </tr>
              <!-- {/foreach} -->
            </table>
          </div>
          <p class="bottom"><span></span></p>
        </div>
        <!-- end-Record_Bid -->
      </div>
    </div>
    <!-- #BeginLibraryItem "/library/help.lbi" --><!-- #EndLibraryItem -->
    <!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
  </div>
</body>
<script type="text/javascript">
var gmt_end_time = "{$auction.gmt_end_time|default:0}";
{foreach from=$lang.goods_js item=item key=key}
var {$key} = "{$item}";
var now_time = {$now_time};
{/foreach}
<!-- {literal} -->

onload = function()
{
  try
  {
    onload_leftTime(now_time);
  }
  catch (e)
  {}
}
<!-- {/literal} -->
</script>
</html>