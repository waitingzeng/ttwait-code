<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<!-- TemplateBeginEditable name="doctitle" -->
<title>{$page_title}</title>
<!-- TemplateEndEditable --><!-- TemplateBeginEditable name="head" --><!-- TemplateEndEditable -->
<link rel="shortcut icon" href="favicon.ico" />
<link rel="icon" href="animated_favicon.gif" type="image/gif" />
<link href="{$ecs_css_path}" rel="stylesheet" type="text/css" />
{* 包含脚本文件 *}
{insert_scripts files='utils.js,common.js,global.js,compare.js'}
</head>
<body>
  <div id="wrap">
    <!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->
    <div class="container">
      <div class="global_l">
        <!-- TemplateBeginEditable name="左边区域" -->
        <!-- #BeginLibraryItem "/library/category_tree.lbi" --><!-- #EndLibraryItem -->
        <!-- #BeginLibraryItem "/library/promotion_info.lbi" --><!-- #EndLibraryItem -->
        <!-- #BeginLibraryItem "/library/top10.lbi" --><!-- #EndLibraryItem -->
        <!-- #BeginLibraryItem "/library/history.lbi" --><!-- #EndLibraryItem -->
        <!-- TemplateEndEditable -->
      </div>
      <div class="global_r">
        <!-- {if $action eq "form"} -->
        <!--  搜索的表单 -->
        <div class="module">
          <p class="top"><span></span></p>
          <div class="content">
            <form action="search.php" method="get" name="advancedSearchForm" id="advancedSearchForm">
              <table border="0" style=" padding:5px 0 5px 10px;" align="center" cellpadding="3">
                <tr>
                  <td valign="top">{$lang.keywords}：</td>
                  <td>
                    <input name="keywords" id="keywords" type="text" size="40" maxlength="120" class="inputBg" value="{$adv_val.keywords}" />
                    <label for="sc_ds">
                    <input type="checkbox" name="sc_ds" value="1" id="sc_ds" {$scck} />
                    {$lang.sc_ds}</label>
                    <br />
                    {$lang.searchkeywords_notice}
                  </td>
                </tr>
                <tr>
                  <td>{$lang.category}：</td>
                  <td>
                    <select name="category" id="select" style="border:1px solid #ccc;">
                      <option value="0">{$lang.all_category}</option>
                      {$cat_list}
                    </select>
                  </td>
                </tr>
                <tr>
                  <td>{$lang.brand}：</td>
                  <td>
                    <select name="brand" id="brand" style="border:1px solid #ccc;">
                      <option value="0">{$lang.all_brand}</option>
                      {html_options options=$brand_list selected=$adv_val.brand}
                    </select>
                  </td>
                </tr>
                <tr>
                  <td>{$lang.price}：</td>
                  <td>
                    <input name="min_price" type="text" id="min_price" class="inputBg" value="{$adv_val.min_price}" size="10" maxlength="8" />-
                    <input name="max_price" type="text" id="max_price" class="inputBg" value="{$adv_val.max_price}" size="10" maxlength="8" />
                  </td>
                </tr>
                <!--{if $goods_type_list}-->
                <tr>
                  <td>{$lang.extension}：</td>
                  <td>
                    <select name="goods_type" onchange="this.form.submit()" style="border:1px solid #ccc;">
                      <option value="0">{$lang.all_option}</option>
                      {html_options options=$goods_type_list selected=$goods_type_selected}
                    </select>
                  </td>
                </tr>
                <!--{/if}-->
                <!--{if $goods_type_selected > 0}-->
                <!--{foreach from=$goods_attributes item=item}-->
                <!--{if $item.type eq 1}-->
                <tr>
                  <td>{$item.attr}：</td>
                  <td colspan="3"><input name="attr[{$item.id}]" value="{$item.value}" class="inputBg" type="text" size="20" maxlength="120" /></td>
                </tr>
                <!--{/if}-->
                <!--{if $item.type eq 2}-->
                <tr>
                  <td>{$item.attr}：</td>
                  <td colspan="3">
                    <input name="attr[{$item.id}][from]" value="{$item.value.from}" type="text" size="5" maxlength="5" />-
                    <input name="attr[{$item.id}][to]" value="{$item.value.to}" type="text" maxlength="5" />
                  </td>
                </tr>
                <!--{/if}-->
                <!--{if $item.type eq 3}-->
                <tr>
                  <td>{$item.attr}：</td>
                  <td colspan="3">
                    <select name="attr[{$item.id}]" style="border:1px solid #ccc;">
                      <option value="0">{$lang.all_option}</option>
                      {html_options options=$item.options selected=$item.value}
                    </select>
                  </td>
                </tr>
                <!--{/if}-->
                <!--{/foreach}-->
                <!--{/if}-->
                <!-- {if $use_storage eq 1} -->
                <tr>
                  <td>&nbsp;</td>
                  <td>
                    <label for="outstock"><input type="checkbox" name="outstock" value="1" id="outstock" <!-- {if $outstock} -->checked="checked"<!--{/if}-->/> {$lang.hidden_outstock}</label>

                  </td>
                </tr>
                <!--{/if}-->
                <tr>
                  <td colspan="4" align="center">
                    <input type="hidden" name="action" value="form" />
                    <input type="submit" name="Submit" value="{$lang.button_search}" />
                  </td>
                </tr>
              </table>
             </form>
           </div>
           <p class="bottom"><span></span></p>
        </div>
        <!-- {/if} -->
        <!-- {if isset($goods_list)} -->
        <div class="goods_list module">
               <div class="caption">
                 <!--标题及显示方式-->
                 <!--{if $goods_list}-->
                 <form action="search.php" method="post" class="sort" name="listform" id="form">
                   {$lang.btn_display}：
                   <a href="javascript:;" onClick="javascript:display_mode('list')"><img src="images/display_mode_list<!-- {if $pager.display == 'list'} -->_act<!-- {/if} -->.gif" alt="{$lang.display.list}"></a>
                   <a href="javascript:;" onClick="javascript:display_mode('grid')"><img src="images/display_mode_grid<!-- {if $pager.display == 'grid'} -->_act<!-- {/if} -->.gif" alt="{$lang.display.grid}"></a>
                   <a href="javascript:;" onClick="javascript:display_mode('text')"><img src="images/display_mode_text<!-- {if $pager.display == 'text'} -->_act<!-- {/if} -->.gif" alt="{$lang.display.text}"></a>&nbsp;&nbsp;
                   <select name="sort">
                     {html_options options=$lang.sort selected=$pager.sort}
                   </select>
                   <select name="order">
                     {html_options options=$lang.order selected=$pager.order}
                   </select>
                   <input type="image" name="imageField" src="../images/bnt_go.gif" alt="go"/>
                   <input type="hidden" name="page" value="{$pager.page}" />
                   <input type="hidden" name="display" value="{$pager.display}" id="display" />
                   <!--{foreach from=$pager.search key=key item=item}-->
                     {if $key neq "sort" and $key neq "order"}
                     {if $key eq 'keywords'}
                     <input type="hidden" name="{$key}" value="{$item|escape:decode_url}" />
                     {else}
                     <input type="hidden" name="{$key}" value="{$item}" />
                     {/if}
                     {/if}
                   <!--{/foreach}-->
                 </form>
                 <!--{/if}-->
                 <!-- {if $intromode eq 'best'} -->
                 <span style="float:left;">{$lang.best_goods}</span>
                 <!-- {elseif $intromode eq 'new'} -->
                 <span style="float:left;">{$lang.new_goods}</span>
                 <!-- {elseif $intromode eq 'hot'} -->
                 <span style="float:left;">{$lang.hot_goods}</span>
                 <!-- {elseif $intromode eq 'promotion'} -->
                 <span style="float:left;">{$lang.promotion_goods}</span>
                 <!-- {else} -->
                 <span style="float:left;">{$lang.search_result}</span>
                 <!-- {/if} -->
               </div>
               <p class="top"><span></span></p>
               <div class="content">
               <!--{if $goods_list}-->
               <!-- {if $category > 0} -->
               <form name="compareForm" action="compare.php" method="post" onSubmit="return compareGoods(this);">
               <!-- {/if} -->
               <!-- {if $pager.display == 'list'} -->
               <ul class="goods_item">
                <!--{foreach from=$goods_list item=goods}-->
                  <li>
                <!-- {if $goods.goods_id} -->
                       <p class="img"><a href="{$goods.url}"><img src="{$goods.goods_thumb}" alt="{$goods.goods_name}" class="goodsimg" /></a></p>
                       <h6>{$goods.goods_name}</h6>           
                       <p class="brief">
                         <!--{if $goods.goods_brief} 商品描述-->
                         {$lang.goods_brief}{$goods.goods_brief}
                         <!--{/if}-->
                       </p>           
                       <p class="price">
                       <!-- {if $show_marketprice} -->
                       {$goods.market_price}
                       <!-- {/if} --><br/>
                       <!--{if $goods.promote_price neq "" } -->
                       {$lang.promote_price}<font class="f4">{$goods.promote_price}</font>
                        <!--{else}-->
                       {$lang.shop_prices}<font class="f4">{$goods.shop_price}</font>
                       <!--{/if}-->
                       </p>
                       <p class="item_cart">
                         <a href="javascript:collect({$goods.goods_id})"><img style="float:left;" src="../images/add_to_favorite.jpg"></a><br/>
                         <a href="javascript:addToCart({$goods.goods_id})"><img style="float:left;" src="../images/add_top_cart.jpg"></a>
                       </p>
                    <!--{/if}-->
                  </li>
                <!--{/foreach}-->    
                </ul>
               <!-- {elseif $pager.display == 'grid'} -->
               <ul class="goods_grid">   
                 <!--{foreach from=$goods_list item=goods}-->
                 <!-- {if $goods.goods_id} 不加此句会多循环出一个商品来--> 
                 <li>       
                   <p class="img"><a href="{$goods.url}"><img src="{$goods.goods_thumb}" alt="{$goods.goods_name}" class="goodsimg" /></a></p>
                   <p class="name"><a href="{$goods.url}" title="{$goods.name|escape:html}">{$goods.goods_name}</a></p>
                   <p class="price">
                    <!-- {if $goods.promote_price neq ""} -->
                    {$goods.promote_price}
                    <!-- {else}-->
                    {$goods.shop_price}
                    <!--{/if}-->
                  </p>  
                  <p class="btn_list">
                    <a href="javascript:collect({$goods.goods_id})"><img style="float:left;" src="../images/add_to_favorite.jpg"></a>
                    <a href="javascript:addToCart({$goods.goods_id})"><img style="float:left;" src="../images/add_top_cart.jpg"></a>
                  </p>  
                  </li> 
                 <!-- {/if} -->
                  <!--{/foreach}--> 
                </ul>
               <!-- {elseif $pager.display == 'text'} -->
               <ul class="goods_item">
                <!--{foreach from=$goods_list item=goods}-->
                  <li>
                  <!-- {if $goods.goods_id} -->
                       <h6>{$goods.goods_name}</h6>           
                       <p class="brief">
                         <!--{if $goods.goods_brief} 商品描述-->
                         {$lang.goods_brief}{$goods.goods_brief}
                         <!--{/if}-->
                       </p>           
                       <p class="price">
                       <!-- {if $show_marketprice} -->
                       {$goods.market_price}
                       <!-- {/if} --><br/>
                       <!--{if $goods.promote_price neq "" } -->
                       {$lang.promote_price}<font class="f4">{$goods.promote_price}</font>
                        <!--{else}-->
                       {$lang.shop_prices}<font class="f4">{$goods.shop_price}</font>
                       <!--{/if}-->
                       </p>
                       <p class="item_cart">
                         <a href="javascript:collect({$goods.goods_id})"><img style="float:left;" src="../images/add_to_favorite.jpg"></a><br/>
                         <a href="javascript:addToCart({$goods.goods_id})"><img style="float:left;" src="../images/add_top_cart.jpg"></a>
                       </p>
                  <!--{/if}-->
                  </li>
                <!--{/foreach}-->
                 </ul>
              <!-- {/if} -->
              <div style="padding:0 9px; display:block; clear:both;">
                <!-- #BeginLibraryItem "/library/pages.lbi" --><!-- #EndLibraryItem -->
              </div>
              <!-- {if $category > 0} -->
            </form>
            <script type="text/javascript">
              {foreach from=$lang.compare_js item=item key=key}
              var {$key} = "{$item}";
              {/foreach}

              {foreach from=$lang.compare_js item=item key=key}
              {if $key neq 'button_compare'}
              var {$key} = "{$item}";
              {else}
              var button_compare = '';
              {/if}
              {/foreach}


              var compare_no_goods = "{$lang.compare_no_goods}";
              window.onload = function()
              {
                Compare.init();fixpng();
										}
							var btn_buy = "{$lang.btn_buy}";
							var is_cancel = "{$lang.is_cancel}";
							var select_spe = "{$lang.select_spe}";
							</script>
              <!-- {/if} -->
            </div>
              <!--{else}-->
              <div style="padding:20px 0px; text-align:center">{$lang.no_search_result}</div></div>
              <!--{/if}-->
            <p class="bottom"><span></span></p>    
            </div>    
        <!-- {/if} -->
      </div>
    </div>
    <!-- #BeginLibraryItem "/library/help.lbi" --><!-- #EndLibraryItem -->
    <!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
  </div>
</body>
</html>