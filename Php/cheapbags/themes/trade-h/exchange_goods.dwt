<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<!-- TemplateBeginEditable name="doctitle" -->
<title>{$page_title}</title>
<!-- TemplateEndEditable --><!-- TemplateBeginEditable name="head" --><!-- TemplateEndEditable -->
<link rel="shortcut icon" href="favicon.ico" />
<link rel="icon" href="animated_favicon.gif" type="image/gif" />
<link href="style.css" rel="stylesheet" type="text/css" />
<!-- {if $cat_style} -->
<link href="{$cat_style}" rel="stylesheet" type="text/css" />
<!-- {/if} -->
{* 包含脚本文件 *}
{insert_scripts files='common.js,global.js,compare.js'}
<SCRIPT src="images/douco.js" type=text/javascript></SCRIPT>
</head>
<body>
<div id="globalWrapper">
  <div id="wrapper"><!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem --><!-- End #search-bar -->
    <!-- TemplateBeginEditable name="通栏广告位" -->
<!-- TemplateEndEditable -->
    <div id="container">
    <!-- #BeginLibraryItem "/library/ur_here.lbi" --> {$lang.ur_here} {$ur_here} <!-- #EndLibraryItem -->
     <div id="pageLeft"> 
        <!-- TemplateBeginEditable name="主区域左侧" -->
  <!-- #BeginLibraryItem "/library/category_tree.lbi" -->

<div class="titleDiv"><img src="../images/category.gif" alt="Category" width="158" height="39" /></div>
<div id="catDiv" style="padding:5px 10px;">
  <ul>
    <!--{foreach from=$categories item=cat}-->
    <li> <span class="parent-cat"><A href="{$cat.url}">{$cat.name|escape:html}</A></span><br />
      <!--{foreach from=$cat.children item=child}-->
      <span style="white-space:nowrap;"><A href="{$child.url}">{$child.name|escape:html}</A></span>
      <!--{/foreach}-->
    </li>
    <!--{/foreach}-->
  </ul>
</div>

 <!-- #EndLibraryItem --><!-- TemplateEndEditable -->      </div>
      <!-- End #pageLeft -->
      <div id="pageIn">
        <div id="pageIn">
    <!--商品详情start-->
    <div class="intro clearfix">
        <div class="headline"> <span class="introTL">&nbsp;</span> <span class="introTR">&nbsp;</span>
          <h1>{$goods.goods_style_name}</h1>
          <h2>
           <span style="float:right"><!-- {if $prev_good} --><a href="{$prev_good.url}"><img alt="prev" src="images/up.gif" /></a><!-- {/if} --><!-- {if $next_good} --><a href="{$next_good.url}"><img alt="next" src="images/down.gif" /></a><!-- {/if} --></span>
          <!-- 倒计时js{if $goods.is_promote and $goods.gmt_end_time} -->
              {insert_scripts files='lefttime.js'}
            该商品以 <span style="color:#F00;font-weight:bold">{$goods.promote_price}</span> 促销中 
            {$lang.residual_time}<span class="goodsPrice" id="leftTime">{$lang.please_waiting}</span>
                <!-- {/if} -->
</h2>
        </div>
         <div class="introBody">
          <!--商品图片和相册 start-->
          <div class="imgInfo">
            <!-- {if $pictures}-->
            <a href="{$pictures.0.img_url}" id="zoom1" class="MagicZoom MagicThumb" title="{$goods.goods_style_name}"> <img src="{$pictures.0.img_url}" alt="{$goods.goods_name|escape:html}" class="thumb"/> </a>
            <!-- {else} -->
            <a href="{$pictures.0.img_url}" id="zoom1" class="MagicZoom MagicThumb" title="{$goods.goods_style_name}"> <img src="{$pictures.0.img_url}" alt="{$goods.goods_name|escape:html}" class="thumb"/> </a>
            <!-- {/if}-->
            <div class="blank5"></div>
            <!--相册 START-->
            <!-- #BeginLibraryItem "/library/goods_gallery.lbi" --><!-- #EndLibraryItem -->
            <!--相册 END-->
            <div class="blank5"></div>
			<!-- TemplateBeginEditable name="商品相册下广告（宽230px）" --> <!-- TemplateEndEditable --> </div>
          <!--商品图片和相册 end-->
          <div class="itemInfoList">
      <form action="exchange.php?act=buy" method="post" name="ECS_FORMBUY" id="ECS_FORMBUY" >
        <h2>{$goods.goods_style_name}</h2>
        <div style="margin-top:5px;">
          <!-- {if $prev_good} -->
          <a href="{$prev_good.url}"><img alt="prev" src="./images/up.gif" /></a>
          <!-- {/if} -->
          <!-- {if $next_good} -->
          <a href="{$next_good.url}"><img alt="next" src="./images/down.gif" /></a>
          <!-- {/if} --></div>
                

        <ul class="line">
          <!-- {if $cfg.show_goodssn} 显示商品货号-->
          <li>{$lang.goods_sn}{$goods.goods_sn}</li>
          <!-- {/if} -->
          <!-- {if $goods.goods_brand neq "" and $cfg.show_brand} 显示商品品牌-->
          <li>{$lang.goods_brand}</strong><a href="{$goods.goods_brand_url}" >{$goods.goods_brand}</a></li>
          <!--{/if}-->
          <!-- {if $cfg.show_goodsweight} 商品重量-->
          <li>{$lang.goods_weight}</strong>{$goods.goods_weight}</li>
          <!-- {/if} -->
          <li>{$lang.exchange_integral}</strong><font class="shop">{$goods.exchange_integral}</font></li>
          <!-- {* 开始循环所有可选属性 *} -->
          <!-- {foreach from=$specification item=spec key=spec_key} 循环规格开始 -->
          <li>{$spec.name}:<br />
            <!-- {if $cfg.goodsattr_style eq 1} 规格显示方式：单选按钮 -->
              <!-- {foreach from=$spec.values item=value key=key} -->
                <label for="spec_value_{$value.id}">
                <input type="radio" name="spec_{$spec_key}" value="{$value.id}" id="spec_value_{$value.id}" {if $key eq 0}checked{/if} />
                {$value.label} </label>
              <!-- {/foreach} -->
            <!-- {else} 规格显示方式：下拉列表 -->
              <select name="spec_{$spec_key}" style="border:1px solid #ccc;">
              <!-- {foreach from=$spec.values item=value key=key} -->
                <option label="{$value.label}" value="{$value.id}">{$value.label} </option>
              <!-- {/foreach} -->
              </select>
            <!-- {/if} 规格显示方式 -->
          </li>
          <!-- {/foreach} 循环规格结束 -->
          <!-- {* 结束循环可选属性 *} -->
        </ul>
        <ul class="line">
          <li>
            <input type="hidden" name="goods_id" value="{$goods.goods_id}" />
            <input type="submit" value="{$lang.exchange_goods}" class="bnt_1"/>
          </li>
        </ul>
      </form>
      </div>
        <div class="blank5"></div>
         </div>
        
       </div>
    <div class="blank"></div>
    <!--商品详情end-->

            <!-- {if $properties} -->
        <div class="globalTitle">Attribute</div>
            <!-- {/if} -->
        <div>

            <table width="98%" border="0" align="center">
              <!-- {foreach from=$properties item=property_group key=key} -->
              <tr>
                <td colspan="2"><strong>{$key|escape}</strong></td>
              </tr>
              <!-- {foreach from=$property_group item=property} -->
              <tr>
                <td nowrap="true">{$property.name|escape:html}</td>
                <td>{$property.value|escape:html}</td>
              </tr>
              <!-- {/foreach}-->
              <!-- {/foreach}-->
            </table>

        </div>
        <!-- {if $goods.goods_desc} -->
        <div class="globalTitle">详细介绍</div>
        <div class="content-div">{$goods.goods_desc}</div>
        <!-- {/if} -->

  </div>
  </div>
      <!-- End #indexMiddle -->
      <!-- End #indexRrigh -->
<div class="clear"></div>
    </div>
    <!-- #BeginLibraryItem "/library/help.lbi" --><!-- #EndLibraryItem -->
	</div><!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
  <!-- End #Wrapper -->
  </div>
<!-- End #globalWrapper -->
</body>
</html>
