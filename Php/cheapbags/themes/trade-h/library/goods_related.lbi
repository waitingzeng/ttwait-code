<div class="libDiv">
  <div class="libTop">
    <h3>{$lang.releate_goods}</h3>
  </div>
  <div class="libBody" id='history_div'>
<div class="goodrelated">
  <!--{foreach from=$related_goods item=releated_goods_data}-->
