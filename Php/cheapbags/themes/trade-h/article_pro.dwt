        <div style="text-align:center;font-size:18px"><strong>{$article.title|escape:html} </strong></div>
      <div style="padding:5px;">
          <!-- {if $article.content } -->
          <div style="padding:10px 20px;">{$article.content}</div>
          <!-- {/if} -->
      </div>
      </div>
      </div>
<div class="clear"></div>
    </div>
    </div><!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
